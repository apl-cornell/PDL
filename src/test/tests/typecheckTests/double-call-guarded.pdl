pipe call_guard(inpt: int<32>)[rf: int<32>[5]<c, s>(Queue)] {
    start(rf);
    reserve(rf);
    end(rf);
    ---
    block(rf);
    int<32> x = rf[u0<5>] + inpt;
    int<1> bit = inpt{0:0};
    if (bit == 1) {
        call call_guard(x);
    }
    ---
    if (bit != 1) {
        call call_guard(x);
    }
    ---
    release(rf);
}

circuit {
    r = memory(int<32>, 5);
}