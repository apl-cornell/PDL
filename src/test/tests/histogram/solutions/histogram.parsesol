pipe hist(counter:int<10>)[feature:int<10>[10]<c, s>,weight:int<32>[10]<c, s>,h:int<32>[10]<c, s>] {
  if ( counter < 1023<10> ) {
      call hist(counter + 1<10>);
      start(feature);
      reserved(feature[counter]);
      acquired(feature[counter]);
      end(feature);
      start(weight);
      reserved(weight[counter]);
      acquired(weight[counter]);
      end(weight);
      int<10> m = feature[counter];
      int<32> wt = weight[counter];
      released(feature[counter]);
      released(weight[counter]);
      
      ---
      start(h);
      reserved(h[m]);
      acquired(h[m]);
      end(h);
      int<32> nm = h[m] + wt;
      print(nm);
      
      ---
      h[m] <- nm;
      released(h[m]);
      
      ---
      
  } else {
      output true;
      
  }
  
}
circuit {
  f = regfile(int<10>,10);
  w = regfile(int<32>,10);
  h = regfile(int<32>,10);
  hg = new hist[f,w,h];
call hg(0<10>);
}
