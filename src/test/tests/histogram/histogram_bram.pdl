    }
}
*/

pipe hist(counter: int<10>)[feature: int<10>[10]<a,a>(FAQueue), weight:
int<32>[10]<a,a>(FAQueue), h: int<32>[10]<a,a>(FAQueue)]: bool {
    bool done = counter >= 1000<10>;
    if (!done) {
        call hist(counter + 1<10>);
    start(feature);
    acquire(feature[counter], R);
    end(feature);
    start(weight);
    acquire(weight[counter], R);
    end(weight);
    int<10> m <- feature[counter];
    int<32> wt <- weight[counter];
    release(feature[counter]);
    release(weight[counter]);
    ---
    int<10> mcp = m;

    start(h);
    acquire(h[m], R);
    acquire(h[mcp], W);
    end(h);
    int<32> oldh <- h[m];
    release(h[m]);
    ---
    int<32> nm = oldh + wt;
    print(nm);
    h[mcp] <- nm;
    release(h[mcp]);
    ---
    }
    if (done) {
      output(true);
    }
}

circuit {
       tf = memory(int<10>, 10);
       f = FAQueue(tf);
       tw = memory(int<32>, 10);
       w = FAQueue(tw);
       th = memory(int<32>, 10);
       h = FAQueue(th);
       hg = new hist[f, w, h];
       call hg(0<10>);
 }